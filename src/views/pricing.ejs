    <style>
        body {
            background: var(--gray-900);
            color: var(--gray-100);
        }
        .navbar {
            background: var(--gray-800);
            border-bottom: 1px solid var(--gray-700);
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 2rem;
        }
        .navbar-brand a {
            color: var(--primary-400);
            font-weight: bold;
            font-size: 1.25rem;
            text-decoration: none;
        }
        .navbar-nav {
            display: flex;
            align-items: center;
            gap: 1rem;
        }
        .navbar-nav a {
            color: var(--gray-300);
            text-decoration: none;
            padding: 0.5rem 1rem;
            border-radius: 0.375rem;
            transition: all 0.2s ease;
        }
        .navbar-nav a:hover {
            color: var(--gray-100);
            background: var(--gray-700);
        }
        .navbar-nav .btn {
            margin-left: 0.5rem;
        }
        .pricing-header {
            text-align: center;
            margin: 3rem 0;
        }
        .pricing-header h1 {
            font-size: 2.5rem;
            color: var(--gray-100);
            margin-bottom: 1rem;
        }
        .pricing-header p {
            font-size: 1.2rem;
            color: var(--gray-400);
            max-width: 600px;
            margin: 0 auto;
        }
        .pricing-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin: 3rem 0;
        }
        .pricing-card {
            background: var(--gray-800);
            border: 2px solid var(--gray-700);
            border-radius: 12px;
            padding: 2rem;
            position: relative;
            transition: all 0.3s ease;
        }
        .pricing-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
            border-color: var(--gray-600);
        }
        .pricing-card.featured {
            border-color: var(--success-500);
            transform: scale(1.02);
            background: var(--gray-750);
        }
        .pricing-card-badge {
            position: absolute;
            top: -12px;
            left: 50%;
            transform: translateX(-50%);
            background: var(--success-600);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.875rem;
            font-weight: 600;
        }
        .pricing-card-header {
            text-align: center;
            margin-bottom: 2rem;
        }
        .pricing-card-header h3 {
            font-size: 1.5rem;
            color: var(--gray-100);
            margin-bottom: 1rem;
        }
        .price {
            display: flex;
            align-items: baseline;
            justify-content: center;
            gap: 0.25rem;
        }
        .currency {
            font-size: 1.5rem;
            color: var(--gray-400);
        }
        .amount {
            font-size: 3rem;
            font-weight: 700;
            color: var(--primary-400);
        }
        .period {
            font-size: 1rem;
            color: var(--gray-400);
        }
        .features {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        .features li {
            padding: 0.5rem 0;
            color: var(--gray-300);
        }
        .btn-large {
            padding: 1rem 2rem;
            font-size: 1.1rem;
            font-weight: 600;
        }
        .pricing-footer {
            text-align: center;
            margin: 4rem 0;
            padding: 3rem 0;
            background: var(--gray-800);
            border-radius: 12px;
            border: 1px solid var(--gray-700);
        }
        .pricing-footer h3 {
            font-size: 2rem;
            color: var(--gray-100);
            margin-bottom: 2rem;
        }
        .benefits-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
            max-width: 1000px;
            margin: 0 auto;
        }
        .benefit {
            text-align: center;
        }
        .benefit h4 {
            font-size: 1.25rem;
            color: var(--gray-100);
            margin-bottom: 0.5rem;
        }
        .benefit p {
            color: var(--gray-400);
            line-height: 1.6;
        }
        @media (max-width: 768px) {
            .pricing-grid {
                grid-template-columns: 1fr;
            }
            .pricing-card.featured {
                transform: none;
            }
            .pricing-header h1 {
                font-size: 2rem;
            }
        }
    </style>
</body>
</html>